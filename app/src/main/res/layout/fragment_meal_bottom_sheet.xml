<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.bottomsheet.MealBottomSheetFragment">


    <RelativeLayout
        android:id="@+id/bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp">
        <ImageView
            android:id="@+id/img_bottom_sheet"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:scaleType="centerCrop"
            android:src="@color/accent_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_bottom_sheet"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_toRightOf="@id/img_bottom_sheet"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_bottom_sheet_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/baseline_location_on_24"
                    android:drawableTint="@color/grey"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:text="Palastine"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/tv_bottom_sheet_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/baseline_category_24"
                    android:drawableTint="@color/grey"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:text="Beef"
                    android:textColor="@color/grey" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_bottomsheet_mealname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/myfont"
                android:text="Meal Name"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/myfont"
                android:text="Read More ..."
                android:textColor="@color/accent_color" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>